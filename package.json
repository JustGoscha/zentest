{
  "name": "zentest",
  "version": "0.2.0",
  "description": "Agentic QA testing framework - write tests in plain English",
  "type": "module",
  "bin": {
    "zentest": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "bun build src/cli.ts --outfile dist/cli.bundle.js --target node --minify --external playwright",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "zentest": "node dist/cli.js"
  },
  "keywords": [
    "testing",
    "e2e",
    "playwright",
    "ai",
    "agentic"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.10.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.35",
    "@ai-sdk/openai": "^3.0.25",
    "@anthropic-ai/sdk": "^0.72.1",
    "@playwright/test": "^1.58.2",
    "ai": "^6.0.68",
    "chalk": "^5.6.2",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "openai": "^6.17.0",
    "ora": "^9.3.0",
    "playwright": "^1.58.1"
  }
}
